<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <include layout="@layout/top_layout"></include>
        <TextView
            android:id="@+id/head_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/self_img"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:background="#ffaad5" />
        <LinearLayout
            android:id="@+id/num_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="编号:"
                android:textSize="28sp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/number_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:textSize="22sp"
                android:hint="编号"
                android:inputType="number"
                android:textColor="#000000"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:background="#ffaad5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="类别:"
                android:textSize="28sp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/p_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:textSize="22sp"
                android:hint="类别"
                android:inputType="text"
                android:textColor="#000000"/>
            <Spinner
                android:id="@+id/p_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="10dp"></Spinner>

        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:background="#ffaad5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="姓名:"
                android:textSize="28sp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:textSize="22sp"
                android:hint="姓名"
                android:inputType="text"
                android:textColor="#000000"/>

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:background="#ffaad5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="性别:"
                android:textSize="28sp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/sex_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:textSize="22sp"
                android:hint="性别"
                android:inputType="text"
                android:textColor="#000000"/>

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:background="#ffaad5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="电话:"
                android:textSize="28sp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/phone_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:textSize="22sp"
                android:hint="电话"
                android:inputType="number"
                android:textColor="#000000"/>

        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="12dip"
            android:background="#ffaad5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:text="地址:"
                android:textSize="28sp" />
            <android.support.design.widget.TextInputEditText
                android:id="@+id/address_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="10dp"
                android:textSize="22sp"
                android:hint="地址"
                android:inputType="text"
                android:textColor="#000000"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
